<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageviewgiohang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/textviewtengiohang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Tên của món hàng"
            android:textColor="#B3000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textviewgiagiohang"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="Giá giỏ hàng"
            android:textColor="@color/colorGiaTri"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonminus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#B3000000" />

            <Button
                android:id="@+id/buttonvalues"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="1"
                android:textColor="#000000"
                android:textSize="24dp" />

            <Button
                android:id="@+id/buttonplus"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>